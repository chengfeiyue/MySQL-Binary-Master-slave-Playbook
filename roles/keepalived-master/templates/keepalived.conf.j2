! Configuration File for keepalived

global_defs {
   router_id LVS_DEVEL
   vrrp_skip_check_adv_addr
   #vrrp_strict
   vrrp_garp_interval 0
   vrrp_gna_interval 0
}
vrrp_script chk_mysql {
        script "{{script_folder}}/mysql_check.sh"
        interval 2
}

vrrp_instance {{mysql_instance}} {
    state MASTER
    nopreempt
    interface {{eth}}
    virtual_router_id {{virtual_router_id}}
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        {{vrrp}}
    }
    track_script {
        chk_mysql
    }
    notify_fault  {{script_folder}}/mysql_fault.sh
}